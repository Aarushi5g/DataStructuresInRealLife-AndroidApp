<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.DataStructuresInRealLife" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/third</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/secondary</item>
        <!-- Customize your theme here. -->
        <item name="background">@color/primary</item>
        <item name="actionBarItemBackground">@color/third</item>
        <item name="android:navigationBarColor" tools:targetApi="lollipop">@color/secondary</item>
    </style>
    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/bg</item>
        <item name="android:navigationBarColor" tools:targetApi="lollipop">@color/secondary</item>
        <item name="android:statusBarColor" tools:targetApi="l">@color/secondary</item>
    </style>
</resources>